package SWEA;

import java.util.Scanner;

public class View {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		for(int tc=1; tc<=10; tc++) {
			int[] dx = {-1, 1};
			int N = sc.nextInt();
			int[][] map = new int[N][255];
			for(int y=0; y<N; y++) {
				int H = sc.nextInt();
				for(int x=0; x<H; x++) {
					map[y][x] = 1;
				}
			}
			int d = 0, ans = 0;
			for(int y=0; y<N; y++) {
				for(int x=0; x<255; x++) {
					if(map[y][x] == 1) {
						for(d=0; d<2; d++) {
							for(int i = 1; i<=2; i++) {
								int nx = x + dx[d] * i;
								
								if(map[y][nx] == 1) break;
								if(map[y][nx] == 0 && i==2) {
									ans++;
									break;
								}
							}
						}
					}
				}
			}
			System.out.println(ans);
			
//			for(int i=0; i<10; i++) {
//				for(int j=0; j<10; j++) {
//					System.out.print(map[i][j]);
//				}
//				System.out.println();
//			}
		}

	}

}
